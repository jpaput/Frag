<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@android:color/white</item>

    </style>

    <style name="TranslucentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="FullTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:background">@null</item>
    </style>

    <style name="FullButtonStyle" parent ="@style/CaGButtonStyle">
        <item name="android:background">@drawable/button_full_selector</item>
    </style>

    <style name="CaGButtonStyle" parent ="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/padding_standard</item>
        <item name="android:paddingEnd">@dimen/padding_standard</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RoundedEditTextStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/antracite_grey</item>
        <item name="android:textColorHint">@color/manatee_grey</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:paddingBottom">@dimen/small</item>
        <item name="android:paddingStart">@dimen/small</item>
        <item name="android:paddingEnd">@dimen/small</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="AutocompleteLightTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextInputLayout"  parent="@android:style/TextAppearance">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="passwordToggleTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="errorEnabled">false</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textColor">@color/red_error</item>
        <item name="android:drawableTint"></item>
        <item name="android:textStyle">bold</item>


    </style>


</resources>
