<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ContinuousScrollableImageView">
        <attr name="imageSrc" format="reference" />
        <attr name="direction"/>
        <attr name="duration" format="integer" />
        <attr name="scaleType"/>
    </declare-styleable>

    <declare-styleable name="DataItemView">
        <attr name="label" format="reference" />
        <attr name="field" format="enum">
            <enum name="not_defined" value="0"/>
            <enum name="gender" value="1"/>
            <enum name="firstname" value="2"/>
            <enum name="lastname" value="3"/>
            <enum name="dob" value="4"/>
            <enum name="size" value="5"/>
            <enum name="weight" value="6"/>
            <enum name="attack" value="7"/>
            <enum name="defense" value="8"/>
            <enum name="speed" value="9"/>
            <enum name="stamina" value="10"/>
            <enum name="aim" value="11"/>
            <enum name="technic" value="12"/>
        </attr>
        <attr name="dataType" format="enum">
            <enum name="user" value="0"/>
            <enum name="player" value="1"/>
        </attr>
    </declare-styleable>

    <attr name="direction">
        <enum name="up" value="0" />
        <enum name="right" value="1" />
        <enum name="down" value="2" />
        <enum name="left" value="3" />
    </attr>

    <attr name="scaleType">
        <enum name = "matrix" value="0"/>
        <enum name = "fitXy" value="1"/>
        <enum name = "fitStart" value="2"/>
        <enum name = "fitCenter" value="3"/>
        <enum name = "fitEnd" value="4"/>
        <enum name = "center" value="5"/>
        <enum name = "centerCrop" value="6"/>
        <enum name = "centerInside" value="7"/>
    </attr>
</resources>