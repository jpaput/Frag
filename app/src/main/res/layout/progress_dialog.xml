<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_overlay_transparency"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/progress_wheel"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:tint="@android:color/white"
        android:src="@drawable/ic_progress_wheel" />

    <TextView
        android:id="@+id/loader_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_wheel"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/marge_xxlarge"
        android:layout_marginTop="@dimen/marge_xxlarge"
        android:layout_marginEnd="@dimen/marge_xxlarge"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/large_interline"
        android:maxLines="3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_standard" />

</RelativeLayout>